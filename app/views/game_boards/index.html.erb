<h1>Listing game_boards</h1>

<table>
  <thead>
    <tr>
      <th>Set of pieces</th>
      <th>List of moves</th>
      <th>Winner</th>
      <th>Loser</th>
      <th>User id 1</th>
      <th>User id 2</th>
      <th>Active?</th>
      <th>Turn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_boards.each do |game_board| %>
      <tr>
        <td><%= game_board.set_of_pieces %></td>
        <td><%= game_board.list_of_moves %></td>
        <td><%= game_board.winner %></td>
        <td><%= game_board.loser %></td>
        <td><%= game_board.user_id_1 %></td>
        <td><%= game_board.user_id_2 %></td>
        <td><%= game_board.active? %></td>
        <td><%= game_board.turn %></td>
        <td><%= link_to 'Show', game_board %></td>
        <td><%= link_to 'Edit', edit_game_board_path(game_board) %></td>
        <td><%= link_to 'Destroy', game_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

